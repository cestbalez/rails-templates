<%= turbo_frame_tag :waiting_list do %>
  <%= form_with model: WaitingListUser.new, class: "relative flex-wrap flex" do |f| %>
    <%= f.text_field :email, disabled: disabled, required: true, class: "relative mb-2 md:mb-0 w-full md:w-2/3 py-4 pl-4 text-sm border rounded", placeholder: "e.g hello@mail.com" %>
      <span class="absolute top-0 left-0 ml-4 -mt-2 px-1 inline-block bg-white text-gray-500 text-xs">Email Address</span>
    <%= f.submit 'Sign me up', disabled: disabled, class: "w-full md:w-auto py-3 px-6 md:ml-2 text-sm text-white font-medium #{disabled ? 'hover:cursor-not-allowed' : 'cursor-pointer'} leading-normal hover:bg-red-300 rounded bg-red-700" %>
  <% end %>
  <p class="mt-2"><%= flash[:notice].presence || flash[:alert] %></p>
<% end %>